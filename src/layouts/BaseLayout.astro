---
/**
 * styleはあまり決めてない。かなり根本の内容。変える必要なし
 * ページの説明とlinktytleを設定するBaseLeyoutProps
 */
 export interface BaseLayoutProps {
  /**
   * ページの説明
   */
  description?: string;
  /**
   * タイトル
   */
  title: PageTitle;
}

interface Props extends BaseLayoutProps {}

import {
  SITE_DESCRIPTION,
  SITE_THEME_COLOR,
  SITE_TWITTER_ID,
  SITE_NAME,
  SITE_OGP_URL,
} from "../siteConfig/config.ts";
import "ress/dist/ress.min.css";
import type { PageTitle } from "../siteConfig/pages.ts";
import { SEO } from "astro-seo"

const { description = SITE_DESCRIPTION, title } = Astro.props;

const pageTitle = title ? `${title} | ${SITE_NAME}` : SITE_NAME;
---

<!-- SEO設定 -->
const title = "iGEM Science Tokyo"
const description = "iGEM Science Tokyo は東京科学大学の公認サークルとして、合成生物学を用いた社会課題解決を目指し国際大会iGEMに挑戦する学生チームです。研究内容、チーム体制、最新成果を発信しております。"
const 

<!doctype html>
<html lang="ja">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="shortcut icon"
      href="images/iGEM_Science_Tokyo_shortcut.png"
    />

    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- OGP (Open Graph Protocol) -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:image" content={SITE_OGP_URL} />
    <meta property="og:image:alt" content={description} />
    <meta property="og:site_name" content={SITE_NAME} />
    <meta property="og:locale" content="ja" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:url" content={Astro.url.href} />
    <meta name="twitter:image" content={SITE_OGP_URL} />
    <meta name="twitter:site" content={SITE_TWITTER_ID} />
    <meta name="twitter:creator" content={SITE_TWITTER_ID} />

    <!-- Canonical URL -->
    <link rel="canonical" href={Astro.url.href} />

    <!-- Additional SEO Tags -->
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content={SITE_THEME_COLOR} />

    <title>{pageTitle}</title>

    <!-- SEO Contents -->
    <SEO
    title={title}
    description={description}
    openGraph={{
      basic: {
        type: 'website',
        title,
        image: SITE_OGP_URL,
        url: 'https://igemsciencetokyo.com',
      },
      optional: {
        description,
      },
    }}
    twitter={{
      card: 'summary_large_image',
      site: '@igem_tokyotech',
      title,
      description,
    }}
  />

  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  /* リセットの全体範囲をカバー */
  * {
    /* マージンをリセット */
    margin: 0;
    /* 境界線のスタイルをリセット */
    font-family: "Hanken Grotesk", Arial, Helvetica, sans-serif;
    font-weight: normal;
    line-height: 1.6;
  }

  html {
    scroll-behavior: smooth;
  }

  html,
  body {
    width: 100%;
    overflow-x: hidden;
  }
</style>