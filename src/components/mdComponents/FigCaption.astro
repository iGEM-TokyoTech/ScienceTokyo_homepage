---
import type { HTMLAttributes } from "astro/types";

import { DummyFigCaption } from "../scripts/DummyFigCaption";

interface Props extends HTMLAttributes<"figcaption"> {}

const { ...props } = Astro.props;
---

<figcaption class:list={[DummyFigCaption.CLASS, "mdx-figcaption"]} {...props}>
  <slot />
</figcaption>


<style>
  .mdx-figcaption {
    text-align: center;
  }
</style>
